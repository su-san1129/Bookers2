<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Bookers</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
      <li><%= link_to "Home", books_path, :class => "home" %></li>
      <li><a href="#">Users</a></li>
      <li><a href="#">Books</a></li>
      <li>
        <%= link_to "logout", destroy_user_session_path, method: :delete %>
      </li>
      <% else %>
      <li><%= link_to "Home", root_path, :class => "home" %></li>
      <li><%= link_to "About", about_path, :class=> "about" %></li>
      <li><%= link_to "log in", new_user_session_path, :class => "sign_in" %></li>
      <li><%= link_to "sign up", new_user_registration_path, :class => "sign_up" %>
</li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

  </body>
</html>
