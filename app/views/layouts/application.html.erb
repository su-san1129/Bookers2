<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Bookers</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
      <li><%= link_to " Home", user_path(current_user.id), :class => "glyphicon glyphicon-home home" %></li>
      <li><%= link_to " Users", users_path, :class => "glyphicon glyphicon-user users" %></li>
      <li><%= link_to " Books", books_path, :class => "glyphicon glyphicon-book books" %></li>
      <li>
        <%= link_to " logout", destroy_user_session_path, method: :delete, :class=> "glyphicon glyphicon-log-out logout" %>
      </li>
      <% else %>
      <li><%= link_to " Home", root_path, :class => "glyphicon glyphicon-home home" %></li>
      <li><%= link_to " About", about_path, :class=> "glyphicon glyphicon-link about" %></li>
      <li><%= link_to " log in", new_user_session_path, :class => "glyphicon glyphicon-edit sign_in" %></li>
      <li><%= link_to " sign up", new_user_registration_path, :class => "glyphicon glyphicon-log-in sign_up" %>
</li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

  </body>
</html>
