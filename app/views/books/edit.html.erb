 <%= form_for(@book) do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title, :class => "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :opinion, :class => "book_body" %>
    <p><%= f.submit 'Update Book', :class=> "btn btn-primary" %></p>
    <p><%= link_to "show", book_path(@book.id) %> | <%= link_to 'back', books_path, :class => "back" %>
<% end %>