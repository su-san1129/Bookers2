

<div class="container">
      <div class="row">
          <div class="col-xs-3">
              
              <h2>New book</h2>
                <%= form_for(@book) do |f| %>
                  <p>Title</p>
                 <%= f.text_field :title, :class =>"book_title col-xs-12" %>
                 <p>Opinion</p>
                 <%= f.text_area :opinion, :class =>"book_body col-xs-12" %>
                  <p><%= f.submit 'Create Book', :class =>"btn btn-primary col-xs-12" %></p>
                <% end %>
          </div>

          <div class="col-xs-9">
            <h1>Books</h1>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
                <% @books.each do |book| %>
                <tr>
                  <td><%= book.user_id %></td>
                  <td><%= link_to book.title, book_path(book.id), :class => "show_#{book.id}" %></td>
                  <td><%= book.opinion %></td>
                </tr>
                <% end %>
              </thead>
            </table>
          </div>
      </div>

</div>