<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
<% end %>
<p id="notice">
 <%= notice %>
</p>
<div class="container">

      <div class="row">
          <div class="col-xs-3">

             <%= render 'users/list', user: @user %>

              <%= render 'books/list', book: @book %>

          </div>

          <div class="col-xs-9">
            <h1>Books</h1>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
                <% @books.each do |book| %>
                <tr>
                  <td><%= attachment_image_tag book.user,:profile_image, :fill, 40, 40, format:"jpeg", class:"img-circle pull-left profile-img", fallback:"no_image.jpg", size: "40x40" %></td>
                  <td><%= link_to book.title, book_path(book.id), :class => "show_#{book.id}" %></td>
                  <td><%= book.opinion %></td>
                </tr>
                <% end %>
              </thead>
            </table>
          </div>
      </div>

</div>